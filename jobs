job('new-dsl-job') {
  
  description('new job via github')
  
  parameters {
  
    booleanParam('Show Name', true)
    
  }
}

job('maven-dsl') {
	description('new job using DSL')
	properties {
		githubProjectUrl('https://github.com/dharkuma/')
	}

	scm {
		git('https://github.com/dharkuma/JavaHelloWorld.git', 'master', {node -> node / 'extensions' << '' })
	}

	triggers {
		gitHubPushTrigger()
	}

	steps {
		maven {
			mavenInstallation('jenkins-maven')
			goals('-B -DskipTests clean package')
		}
		maven {
			mavenInstallation('jenkins-maven')
			goals('test')
		}
		shell {
			command('''
				echo "Deploying the jar in system"
				java -jar target/my-app-1.0-SNAPSHOT.jar
			''')	

		}

	}
}
